<div class="col-md-12">
  <img class="image" src="/assets/img/burger5.png" alt="burger">
</div>

<div class="col-md-12" id="container">

  <h1>Eat-Da-Burger!</h1>

  <ul class="undevoured">
    {{#each burgers}} {{#unless devoured}}
    <li data-id="{{id}}">{{burger_name}}</li>
    {{/unless}} {{/each}}
  </ul>

  <p class="devourtext">Click On A Burger To "Devour" It</p>

<ul class="devoured">
    {{#each burgers}} {{#if devoured}}
    <li>{{burger_name}}</li>
    {{/if}} {{/each}}
  </ul>


  <form class="create-form">
    <div class="form-group">
      <input type="text" id="bu" name="name">
    </div>
    <button type="submit">Add Burger</button>
  </form>

  <p>Enter A Burger You Want To Eat And Click The "Add Burger" Button</p>

</div>