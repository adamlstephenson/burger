<div class="col-md-12">
  <img class="image" src="/assets/img/burger5.png" alt="burger">
</div>

<div class="col-md-12" id="container">

  <h1>Eat-Da-Burger!</h1>

  <ul class="undevoured">
    {{#each burgers}} {{#unless devoured}}
    <li data-id="{{id}}" data-newsleep="{{devoured}}">{{burger_name}}</li>
    {{/unless}} {{/each}}
  </ul>

<ul>
    {{#each burgers}} {{#if devoured}}
    <li>{{burger_name}}</li>
    {{/if}} {{/each}}
  </ul>


  <form class="create-form">
    <div class="form-group">
      <input type="text" id="bu" name="name">
    </div>
    <button type="submit">Add Burger</button>
  </form>
</div>